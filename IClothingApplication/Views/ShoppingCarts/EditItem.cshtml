@model IClothingApplication.Models.ItemWrapper

@{
    ViewBag.Title = "Change Item Quantity";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        @*<h2>@ViewBag.Title</h2>*@

        <h3>Change Item Quantity</h3>
        <div>
            @*<h4>ItemWrapper</h4>*@
            <hr />

            <div style="height: 5vh">

            </div>

            <dl class="dl-horizontal text-sm-center">
                <h3>
                    @Html.DisplayFor(model => model.Product.productName)
                </h3>
                <h5 class="text-center">@Model.Product.productQty In Stock</h5>
                <div style="height: 5vh">

                </div>
                <h6>
                    Quantity:
                </h6>
            </dl>


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.productID)

            @Html.HiddenFor(model => model.cartID)

            <div class="w-100 center">
                @Html.EditorFor(model => model.productQty, new { htmlAttributes = new { @class = "form-control w-50 mx-auto" } })
                @Html.ValidationMessageFor(model => model.productQty, "", new { @class = "text-danger" })
            </div>

            <div style="height: 25vh">

            </div>

            <div>

                <div class="form-actions no-color">
                    <input type="submit" value="Save" class="btn btn-outline-success" />
                    @Html.ActionLink("Back to Cart", "ViewCart", new { }, new { @class = "btn btn-secondary me-1" })
                </div>
            </div>
        </div>
    </div>

}