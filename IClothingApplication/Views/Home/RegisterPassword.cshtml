@model IClothingApplication.Models.UserPassword
@{
    ViewBag.Title = "RegisterPassword";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("RegisterPassword", "Home", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <br />
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(a => a.userAccountName, "Username", new { @class = "form-label" })
                    @Html.TextBoxFor(a => a.userAccountName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.userAccountName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    @Html.LabelFor(a => a.userEncryptedPassword, "Password", new { @class = "form-label" })
                    @Html.PasswordFor(a => a.userEncryptedPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.userEncryptedPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="mb-5 mt-3">
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>
        </div>
    }
</main>
