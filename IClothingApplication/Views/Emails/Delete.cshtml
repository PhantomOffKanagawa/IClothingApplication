@model IClothingApplication.Models.Email

@{
    ViewBag.Title = "Create";
}

<style>
    .email-form {
        max-width: 600px;
        margin: auto;
    }

        .email-form lable {
            font-weight: bold;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
        }
</style>

<div class="email-form">
    <h4>Delete Email</h4>
    <hr />

    <div class="form-group">
        @Html.Label("From", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Administrator.adminName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("To", htmlAttributes: new { @class = "control-label" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Customer.customerName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Subject", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DisplayFor(model => model.emailSubject, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Body", htmlAttributes: new { @class = "control-label" })
        <div>
            @Html.DisplayFor(model => model.emailBody, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.emailDate, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <input type="submit" value="Delete" class="btn btn-secondary me-1" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary me-1" })
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
